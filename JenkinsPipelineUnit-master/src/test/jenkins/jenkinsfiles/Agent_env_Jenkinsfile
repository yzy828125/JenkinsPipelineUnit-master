pipeline {
    agent none
    stages {
        stage('Example Build') {
            agent env.ENV_VAR.toString()
            steps {
                echo 'Hello, Maven'
                sh 'mvn --version'
            }
        }
        stage('Example Test') {
            agent { docker env.some_env_var }
            steps {
                echo 'Hello, JDK'
                sh 'java -version'
            }
        }
    }
}
